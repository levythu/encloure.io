<% include ./partials/head %>

<body>
    <ul class="nav nav-tabs">
        <li role="presentation" class="navbar-left"><a href="/quickgame" class="navbutton">Quick Game</a></li>
        <li role="presentation" class="navbar-right"><a href="/user/login" class="navbutton">Log In</a></li>

        <li role="presentation" class="navbar-right"><a href="/user/register" class="navbutton" >Register</a></li>


    </ul>
    <% include ./partials/image %>

    <div style="margin-top: 20px;">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel-heading">
              <h1 class="panel-title" style="font-size:20px;">Quick Game</h1>
              <%if (typeof error != 'undefined'){ %>
                  <%= error %>
              <% } %>
          </div>
            <div class="panel-body">
                <form method="post" action="/quickgame">
                    <label>Your name: </label>
                    <input type="text" class="form-control noborder" maxlength="20" name="name" required/>
                    <input type="submit" class="btn btn-block mybutton" value="Quick Game">
                </form>
            </div>
        </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/js/jquery/jquery-1.11.1.min.js"></script>
    <script src="/js/bootstrap/bootstrap.min.js"></script>
</body>

</html>
